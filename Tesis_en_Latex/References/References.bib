issn = {20724292},
journal = {Remote Sensing},
keywords = {Digital Surface Model,In-season post-emergence site-specific weed contro,Plant height,Precision agriculture,Segmentation},
mendeley-groups = {Resumen{\_}Prospects{\_}of{\_}Improving{\_}Agricultural{\_}and{\_}Water{\_}Productivity{\_}2020},
