issn = {2077-0472},
journal = {Agriculture},
keywords = {Crop health,Drones,Irrigation,Remote sensing,Resilience,Water productivity},
mendeley-groups = {Resumen{\_}Prospects{\_}of{\_}Improving{\_}Agricultural{\_}and{\_}Water{\_}Productivity{\_}2020},
